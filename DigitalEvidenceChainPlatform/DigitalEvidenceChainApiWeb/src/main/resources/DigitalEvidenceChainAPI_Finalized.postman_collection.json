{
	"info": {
		"_postman_id": "d58b9b49-8050-4f48-96b0-7318bfa66624",
		"name": "DigitalEvidenceChainAPI_Finalized",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "31564931"
	},
	"item": [
		{
			"name": "Obtain JWT Token",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "username",
							"value": "{{username}}"
						},
						{
							"key": "password",
							"value": "{{password}}"
						},
						{
							"key": "client_id",
							"value": "{{client_id}}"
						},
						{
							"key": "client_secret",
							"value": "{{client_secret}}"
						},
						{
							"key": "grant_type",
							"value": "password"
						}
					]
				},
				"url": {
					"raw": "http://localhost:3128/realms/digital-evidence/protocol/openid-connect/token",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3128",
					"path": [
						"realms",
						"digital-evidence",
						"protocol",
						"openid-connect",
						"token"
					]
				}
			},
			"response": []
		},
		{
			"name": "Obtain JWT Token In App",
			"protocolProfileBehavior": {
				"disabledSystemHeaders": {
					"content-type": true
				}
			},
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"username\": \"{{username}}\",\r\n  \"password\": \"{{password}}\",\r\n  \"clientId\": \"{{client_id}}\",\r\n  \"clientSecret\": \"{{client_secret}}\",\r\n  \"grantType\": \"password\"\r\n}"
				},
				"url": {
					"raw": "{{base_url}}/authenticate/token",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"authenticate",
						"token"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get All Evidence",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/evidence/all",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"evidence",
						"all"
					]
				}
			},
			"response": []
		},
		{
			"name": "Create Evidence",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\"description\": \"Sample Evidence\", \"sourceOfficer\": \"John Doe\", \"encryptionStatus\": true, \"acquisitionDate\": \"2024-10-01\", \"custodyStatus\": \"IN_CHAIN\"}"
				},
				"url": {
					"raw": "{{base_url}}/evidence/save",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"evidence",
						"save"
					]
				}
			},
			"response": []
		},
		{
			"name": "Filter Evidence",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/evidence/filter?officer=John Doe&encryptionStatus=true",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"evidence",
						"filter"
					],
					"query": [
						{
							"key": "officer",
							"value": "John Doe"
						},
						{
							"key": "encryptionStatus",
							"value": "true"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Get All Users",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/users/all",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"users",
						"all"
					]
				}
			},
			"response": []
		},
		{
			"name": "Create User",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\"username\": \"user1\", \"fullName\": \"User One\", \"password\": \"password123\", \"roles\": [\"ROLE_USER\"]}"
				},
				"url": {
					"raw": "{{base_url}}/users/save",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"users",
						"save"
					]
				}
			},
			"response": []
		},
		{
			"name": "Generate Evidence Summary",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/evidence/summary/{{evidenceId}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"evidence",
						"summary",
						"{{evidenceId}}"
					]
				}
			},
			"response": []
		}
	]
}